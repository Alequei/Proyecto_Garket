<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Registro_de_Equipos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlanco">


        <LinearLayout
            android:id="@+id/centrado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color"
                    android:textSize="20dp"
                    android:text="Modificanco Foto de placa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/fondo_bordes"
                android:gravity="center">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/camera" />
            </LinearLayout>

            <Button
                android:id="@+id/boton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorGarket"
                android:drawableLeft="@drawable/guardar"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/color" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>