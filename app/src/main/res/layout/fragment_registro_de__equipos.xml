<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Registro_de_Equipos">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorBlanco"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/centrado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_bordes"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/camera"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color"
                android:gravity="center"
                >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ubicacion"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Lima"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Area"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Almacen"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Proceso"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Despacho"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Equipo"

                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Montta Carga"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Conjunto"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Sistema Electrico"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Partes"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color"
                    android:textStyle="normal|bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="200dp"
                    android:text="Bateria"
                    android:textColor="@color/color"
                    android:gravity="center"
                    android:background="@drawable/fondo_bordes"
                    android:layout_height="25dp" />
            </LinearLayout>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/guardar"

                android:id="@+id/boton"
                android:textColor="@color/color"
                android:backgroundTint="@color/colorGarket"
                android:text="Guardar"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>